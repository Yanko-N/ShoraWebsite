@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-action="MinhasReservas" asp-controller="Reservas">
                <span >
                    <img src="/Documentos/Icons/carrinhoCompras.png" height=" 30" />
                </span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Alterar Conta">
                <span >
                    <img src="/Documentos/Icons/account_circle.png" height=" 30" />
                </span>
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark" title="Sair">
                    <img src="/Documentos/Icons/logout.png" height=" 30" />
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <img src="/Documentos/Icons/login.png" height=" 30" />
            </a>
        </li>
    }
</ul>
