@model IEnumerable<ShoraWebsite.Models.Reserva>


@if (ViewBag.statusMessages != null)
{
    <div class="alert alert-success alert-dismissible" role="alert" id="statusMessage">
        @foreach (var s in ViewBag.statusMessages)
        {
            <p>@s</p>
        }
        <button type="button" class="btn-close" onclick="closePopUpMessage('statusMessage')"></button>
    </div>
}


@if (ViewBag.errorsMessages != null)
{
    <div class="alert alert-danger alert-dismissible " role="alert" id="errorMessage">
        @foreach (var s in ViewBag.errorsMessages)
        {
            <p>@s</p>

        }
        <button type="button" class="btn-close" onclick="closePopUpMessage('errorMessage')"></button>
    </div>
}
<div class="container">
    <div class="row">
        <form asp-action="Listagem">
            <div class="input-group rounded">
                <input type="search" name="search" class="form-control rounded" placeholder="Pesquisa" aria-label="Search" aria-describedby="search-addon" />

                <button type="submit" class="btn btn-outline-dark">
                    <img src="/Documentos/Icons/searchIcon.png" height="30" width="30" />
                </button>

            </div>
        </form>
    </div>
    <div class="row">
        <h2> Lista de Reservas </h2>
    </div>
    <div class="row">

        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Ordenar
            </a>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li> <a class="nav-link text-dark" asp-action="Listagem"> Tudo </a></li>
                <li> <a class="nav-link text-dark" asp-route="ordered" asp-route-value="0">Não Vendido</a></li>
                <li><a class="nav-link text-dark" asp-route="ordered" asp-route-value="1"> Vendido</a></li>
            </ul>
        </div>

    </div>
</div>
</div>

<div class="container">

    <div class="row">
        <div class="col-sm">
            <partial name="Listing" model="@Model" />
        </div>


    </div>
</div>