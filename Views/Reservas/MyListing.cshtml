@model IEnumerable<ShoraWebsite.Models.Reserva>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome do Material
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>Tamanho</th>

            <th>
                @Html.DisplayNameFor(model => model.Envio)
            </th>
            <th> Entrar em Contacto</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Roupa.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Quantidade)
                </td>

                <td>
                    @Html.DisplayFor(modelItem=>item.Tamanho)
                </td>

                <td>
                    @item.Envio
                </td>

                <td>
                    <a asp-action="Chat" asp-controller="Accounts" asp-route-id="@item.Id">
                        <img src="~/documentos/icons/chaticon.png" height="30" width="30" />
                        </a>
                </td>
                
            </tr>

        }

    </tbody>

</table>

