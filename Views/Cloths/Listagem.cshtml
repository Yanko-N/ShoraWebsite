@model IEnumerable<ShoraWebsite.Models.Roupa>

@if (ViewBag.statusMessages != null)
{
    <div class="alert alert-success alert-dismissible" role="alert" id="statusMessage">
        @foreach (var s in ViewBag.statusMessages)
        {
            <p>@s</p>
        }
        <button type="button" class="btn-close" onclick="closePopUpMessage('statusMessage')"></button>
    </div>
}


@if (ViewBag.errorsMessages != null)
{
    <div class="alert alert-danger alert-dismissible " role="alert" id="errorMessage">
        @foreach (var s in ViewBag.errorsMessages)
        {
            <p>@s</p>

        }
        <button type="button" class="btn-close" onclick="closePopUpMessage('errorMessage')"></button>
    </div>
}
<h2> Lista de Roupa</h2>
<p>
    <a asp-action="Adicionar">
        <img src="/Documentos/Icons/add.png" height="30" width="30" />
    </a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)

            </th>
            <th>Stock Total</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{

            

            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>  item.Categoria.Tipo)
                    </td>
                    <td>
 
                      @Html.DisplayFor(modelItem=> item.Quantidade)
                    
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem=> item.Preco)

                    </td>

                    <td>

                        <a asp-action="Editar" asp-route-id="@item.Id">
                            <img src="/Documentos/Icons/edit.png" height="30" width="30" />
                        </a>

                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('De certeza que queres apagar @item.Name ?')">
                            <img src="/Documentos/Icons/delete.png" height="30" width="30" />
                        </a>

                    </td>
                    <td>
                        <a asp-action="Detalhes" asp-route-id="@item.Id">
                            <img src="/Documentos/Icons/detalhes.png" height="30" width="30" />
                        </a>

                    </td>
                </tr>
             

            }
        }
    </tbody>
</table>